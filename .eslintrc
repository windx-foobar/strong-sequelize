{
  "extends": [
    "@nuxt/eslint-config"
  ],
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "semi": ["error", "always"],
        "space-before-function-paren": [
          "error",
          {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
          }
        ],
        "no-trailing-spaces": ["error"]
      }
    }
  ]
}
